<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorPrimaryVariant"
                android:endColor="@color/colorPrimary"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="@color/colorOnPrimary" />
            <corners
                android:radius="25dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#880f0f10"
                android:centerColor="#880d0d0f"
                android:endColor="#885d5d5e"/>
            <corners
                android:radius="25dp" />
        </shape>
    </item>
</layer-list>
